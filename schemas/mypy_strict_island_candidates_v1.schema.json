{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://engram.dev/schemas/mypy_strict_island_candidates_v1.schema.json",
  "title": "Mypy Strict Island Candidates Schema",
  "description": "候选模块清单，用于 check_strict_island_admission.py 检查",
  "type": "object",
  "required": ["version", "candidates"],
  "properties": {
    "$schema": {
      "type": "string",
      "description": "JSON Schema 引用"
    },
    "version": {
      "type": "string",
      "enum": ["1"],
      "description": "Schema 版本"
    },
    "description": {
      "type": "string",
      "description": "清单描述"
    },
    "candidates": {
      "type": "array",
      "description": "候选路径列表",
      "items": {
        "type": "string",
        "description": "候选路径（相对于项目根目录），如 src/engram/gateway/foo.py 或 src/engram/logbook/bar/"
      }
    },
    "metadata": {
      "type": "object",
      "description": "可选元数据",
      "properties": {
        "last_updated": {
          "type": "string",
          "format": "date",
          "description": "最后更新日期"
        },
        "updated_by": {
          "type": "string",
          "description": "更新者"
        }
      }
    }
  },
  "additionalProperties": false
}
